<Window x:Class="Vector_Iveco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vector_Iveco"
        mc:Ignorable="d"
        Title="Análise de Combustível - Diesel/Biodiesel"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F0F4F8">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#374151" />
            <Setter Property="FontSize" Value="20" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Background" Value="#059669" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="#FFFFFF" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0"
                Background="ForestGreen"
                CornerRadius="8"
                Margin="0,0,0,5">

            <StackPanel Orientation="Horizontal"
                        Margin="20"
                        HorizontalAlignment="Center">

                <Image Source="/Imagens/fuel-gas.png"
                       Width="50"
                       Height="50"
                       Margin="0,0,15,0" />

                <TextBlock Text="ANÁLISE DE COMBUSTÍVEL"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Formulário -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Densidade -->
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Densidade (kg/m³):" />

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         x:Name="txtDensidade"
                         Text="830"
                         PreviewTextInput="NumberValidationTextBox" />

                <!-- Presença de Água -->
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Presença de Água:" />

                <ComboBox Grid.Row="1" Grid.Column="1"
                          x:Name="cmbAgua"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Não" />
                    <ComboBoxItem Content="Sim" />
                </ComboBox>

                <!-- Percentual de Biodiesel -->
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Percentual de Biodiesel (%):" />

                <TextBox Grid.Row="2" Grid.Column="1"
                         x:Name="txtBiodiesel"
                         Text="10"
                         PreviewTextInput="NumberValidationTextBox" />

                <!-- Botão Analisar -->
                <Button Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="ANALISAR COMBUSTÍVEL"
                        Click="BtnAnalisar_Click"
                        FontSize="16" />

                <!-- Resultado -->
                <Label Grid.Row="4"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Center"
                       Content="RESULTADO DA ANÁLISE:" />

                <ScrollViewer Grid.Row="5"
                              Grid.Column="0"
                              Grid.ColumnSpan="2"
                              MaxHeight="300">

                    <TextBox x:Name="txtResultado"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             FontSize="20"
                             VerticalScrollBarVisibility="Auto"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             Text="AGUARDANDO DADOS..." />
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Rodapé -->
        <Border Grid.Row="2"
                Background="#F3F4F6"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <TextBlock Text="Projeto Zero-E-Mission © 2025"
                       Margin="10"
                       Foreground="#6B7280" />
        </Border>
    </Grid>
</Window>